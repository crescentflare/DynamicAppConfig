<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.crescentflare.dynamicappconfigexample">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".ExampleApplication">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".utility.ShowLogActivity"
            android:label="@string/show_log_title"/>
        <activity android:name="com.crescentflare.dynamicappconfig.activity.ManageAppConfigActivity"/>
        <activity android:name="com.crescentflare.dynamicappconfig.activity.EditAppConfigActivity"/>
        <activity android:name="com.crescentflare.dynamicappconfig.activity.AppConfigStringChoiceActivity"/>
    </application>
</manifest>
